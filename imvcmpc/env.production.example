# Production Environment Variables for Render
# These will be set in Render dashboard, this file is for reference

NODE_ENV=production

# Database (will be automatically set by Render)
# DB_HOST=<render-database-host>
# DB_PORT=5432
# DB_NAME=imvcmpc_fms
# DB_USER=<render-database-user>
# DB_PASSWORD=<render-database-password>

# JWT Configuration (Render will generate JWT_SECRET)
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15
SESSION_TIMEOUT=30

# CORS Configuration (update with your Render domain)
ALLOWED_ORIGINS=https://your-app-name.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
